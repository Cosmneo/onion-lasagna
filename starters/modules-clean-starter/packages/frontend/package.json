{
  "name": "@repo/frontend",
  "version": "0.0.1",
  "description": "Frontend package with design system components and styles",
  "type": "module",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    "./design-system": {
      "types": "./dist/design-system/index.d.ts",
      "import": "./dist/design-system/index.js",
      "default": "./dist/design-system/index.js"
    },
    "./design-system/styles/*": {
      "import": "./design-system/styles/*",
      "default": "./design-system/styles/*"
    }
  }
}
