{
  "name": "@cosmneo/onion-lasagna-client",
  "version": "0.2.0",
  "description": "Standalone HTTP client and test utilities for onion-lasagna",
  "type": "module",
  "license": "MIT",
  "author": "Cosmneo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cosmneo/onion-lasagna.git",
    "directory": "packages/clients/onion-lasagna-client"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@cosmneo/onion-lasagna": "workspace:*",
    "@cosmneo/onion-lasagna-zod": "workspace:*",
    "tsup": "^8.5.1",
    "vitest": "^4.0.16",
    "zod": "4.3.6"
  },
  "peerDependencies": {
    "@cosmneo/onion-lasagna": ">=0.2.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "bun run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
