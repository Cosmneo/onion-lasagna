{
  "name": "onion-lasagna-monorepo",
  "private": true,
  "description": "Monorepo for onion-lasagna library and documentation",
  "type": "module",
  "license": "MIT",
  "author": "Cosmneo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cosmneo/onion-lasagna.git"
  },
  "workspaces": [
    "packages/onion-lasagna",
    "packages/servers/*",
    "packages/schemas/*",
    "packages/clients/*",
    "packages/patterns/*",
    "packages/tooling/*",
    "apps/*"
  ],
  "packageManager": "bun@1.3.3",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.50.1"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "publish:dry": "bun scripts/publish-all.ts --dry-run",
    "version:set": "bun scripts/bump-version.ts --set",
    "version:bump": "bun scripts/bump-version.ts patch",
    "version:bump:minor": "bun scripts/bump-version.ts minor",
    "version:bump:major": "bun scripts/bump-version.ts major"
  }
}
