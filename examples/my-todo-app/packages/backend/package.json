{
  "name": "@repo/backend",
  "version": "0.0.1",
  "description": "Backend package with onion architecture",
  "type": "module",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "dependencies": {
    "@cosmneo/onion-lasagna": "file:../../../../packages/onion-lasagna",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "zod": "^4.2.1"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    "./bounded-contexts/*": {
      "types": "./dist/bounded-contexts/*.d.ts",
      "import": "./dist/bounded-contexts/*.js",
      "default": "./dist/bounded-contexts/*.js"
    },
    "./orchestrations/*": {
      "types": "./dist/orchestrations/*.d.ts",
      "import": "./dist/orchestrations/*.js",
      "default": "./dist/orchestrations/*.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared/index.js",
      "default": "./dist/shared/index.js"
    }
  }
}
